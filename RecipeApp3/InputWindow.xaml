<Window x:Class="RecipeApp3.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="500" Width="700">
    <Grid>
        <StackPanel>
            <TextBlock Name="PromptText" FontSize="16" Margin="10"/>
            <TextBox Name="InputBox" Margin="10" Visibility="Collapsed"/>
            <ComboBox Name="ComboBoxInput" Margin="10" Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="80" Margin="10" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="80" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
