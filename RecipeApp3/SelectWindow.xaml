<Window x:Class="RecipeApp3.SelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectWindow" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="PromptText" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" />
        <ListBox x:Name="ItemsListBox" Margin="10,50,10,50" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
